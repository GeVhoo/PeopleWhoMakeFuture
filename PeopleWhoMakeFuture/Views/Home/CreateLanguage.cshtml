@model PeopleWhoMakeFuture.Models.Language
@{
    ViewData["Title"] = "Добавление языка";
}

<div class="text-center">
    <h1 class="display-4">Добавление языка программирования</h1>
</div>
<form asp-action="createLanguage" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>