@model PeopleWhoMakeFuture.Models.EmployeeViewsModel
@{
    ViewData["Title"] = "Добавление сотрудника";
}

<div class="text-center">
    <h1 class="display-4">Добавление сотрудника</h1>
</div>
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Employee.FirstName" class="control-label">Имя</label>
        <input type="text" asp-for="Employee.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.SecondName" class="control-label">Фамилия</label>
        <input type="text" asp-for="Employee.SecondName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.Age" class="control-label">Возраст</label>
        <input type="number" asp-for="Employee.Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.DepartmentID" class="control-label">Отдел</label>
        @Html.DropDownListFor(m => m.Employee.DepartmentID, new SelectList(Model.Departments, "Value", "Text"), "Выберите отдел", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="Employee.LanguageID" class="control-label">Язык</label>
        @Html.DropDownListFor(m => m.Employee.LanguageID, new SelectList(Model.Languages, "Value", "Text"), "Выберите язык", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>